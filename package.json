{
  "name": "root",
  "version": "0.3.4",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/odanado/aws-kms-provider"
  },
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist",
    "lib",
    "package.json",
    "yarn.lock"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn workspace aws-kms-signer build; yarn workspace aws-kms-provider build",
    "test": "run-p test:*",
    "test:jest": "yarn jest packages",
    "test:coverage": "yarn test:jest --coverage",
    "test:lint": "eslint --ext .js,.ts --ignore-path .gitignore --max-warnings 0 .",
    "test:format": "prettier --ignore-path .gitignore . --check",
    "format": "yarn test:format --write",
    "e2e": "yarn jest -i --detectOpenHandles --forceExit ./test",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "web3": "^1.5.2"
  }
}
